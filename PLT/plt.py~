#
import matplotlib.pyplot as plt

def plt_gen(dg,name):
    for d in dg:
        plt.figure(name)
        plt.cla()
        plt.plot(d)
        plt.show(block=False)
        plt.pause(.000001)
        yield d 



def hist_gen(wg,N,name):

    for w in wg:
        plt.figure(name)
        plt.cla()
        plt.hist(w,N)
        plt.show(block=False)
        plt.pause(.000001)
        yield w






















